<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MillionAndUp Diego Apply Test Presentation</title>

    <!-- Favicon Section -->
    <link rel="shortcut icon" href="~/assets/favicon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/assets/favicon/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/assets/favicon/site.webmanifest">

    <!-- Fonts and icons -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="~/css/material-kit.css?v=2.0.7" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="landing-page sidebar-collapse">
    <nav class="navbar navbar-transparent navbar-color-on-scroll fixed-top navbar-expand-lg" color-on-scroll="100" id="sectionsNav">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home" asp-area="">
                    Million and Up
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="dropdown nav-item">
                        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                            <i class="material-icons">engineering</i> Manage
                        </a>
                        <div class="dropdown-menu dropdown-with-icons">
                            <a asp-action="Index" asp-controller="Authors" asp-area="Manage" class="dropdown-item">
                                <i class="material-icons">face</i> Authors
                            </a>
                            <a asp-action="Index" asp-controller="Editorials" asp-area="Manage" class="dropdown-item">
                                <i class="material-icons">insert_comment</i> Editorials
                            </a>
                            <a asp-action="Index" asp-controller="Books" asp-area="Manage" class="dropdown-item">
                                <i class="material-icons">library_books</i> Books
                            </a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" rel="tooltip" title="" data-placement="bottom" href="https://www.linkedin.com/in/diego-alejandro-arenas-tangarife-080a79119/" target="_blank" data-original-title="Follow me on LinkedIn" rel="nofollow">
                            <i class="fa fa-linkedin" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" rel="tooltip" title="" data-placement="bottom" href="https://github.com/dtarenas" target="_blank" data-original-title="Follow me on github" rel="nofollow">
                            <i class="fa fa-github" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" rel="tooltip" title="" data-placement="bottom" href="https://bio.torre.co/es/dtarenas" target="_blank" data-original-title="View my proffesional Genome" rel="nofollow">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()


    <!--Template Section -->
    <template id="template-loading">
        <div class="text-center">
            <i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
            <span class="h3 font-weight-bold">Loading...</span>
        </div>
    </template>

    <template id="template-error">
        <div class="alert alert-error" role="alert">
            <h3 class="title font-weight-bold">Sorry!</h3>
            <hr>
            <p>Something went wrong. Contact the site admin</p>
        </div>
    </template>


    <!--   Core JS Files   -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap-material-design.min.js"></script>

    <!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
    <script src="~/js/material-kit.js?v=2.0.7" type="text/javascript"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
